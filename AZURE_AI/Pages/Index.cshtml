@page
@model IndexModel
<style>
    .panel-heading {
        padding: 0px;
    }
</style>
<div class="row">
<div class="col-md-12">
<h2 class="mt-4">Chat with your relational database!</h2>
<hr />
<br />
</div>
<div class="col-md-12">
<form asp-page="Index" class="form">
<div class="form-group mb-3">
<h4 for="name">Your Prompt</h4>
<textarea type="text" asp-for="@Model.UserPrompt" class="form-control"></textarea>
</div>
<input type="submit" class="btn btn-success" />
</form>
<hr />
        @if (!string.IsNullOrEmpty(Model.Error))
        {
            <p><b>Error:</b> @Model.Error</p>
        }
        @if (!string.IsNullOrEmpty(Model.Summary))
        {
            <p><b>AI generated summary:</b> @Model.Summary</p>
        }
        @if (!string.IsNullOrEmpty(Model.Query))
        {
            <p><b>AI generated query:</b>@Model.Query</p>
        }
        
        @if (Model.Data != null)
        {
            <p><b>Data results:</b></p>
        }
        <div class="overflow-scroll">
        <table class="table table-striped">
                @if (Model.Data != null)
                {
                    foreach (var row in Model.Data)
                    {
                    <tr>
                            @foreach (var col in row)
                            {
                                <td>@col</td>
                            }
                    </tr>
                    }
                }
        </table>
        </div>
        </div>
</div>
 
<div class="row">
    <div class="col-md-6 mt-4">
        <div class="screen-one">
            <h3>Used fields</h3>
            @* <iframe src="/Screen1" width="100%" height="400px"></iframe> *@
            <div class="row">
                <div class="col-md-6 mt-4">
                    <div id="screen-one">

                        @if (Model.TableColumns != null && Model.TableColumns.Any())
                        {

                            @foreach (var table in Model.TableColumns)
                            {
                                <div>
                                    <i class="fas fa-folder"></i>@table.Table
                                    <ul>
                                        @foreach (var column in table.Columns)
                                        {
                                            <li><i class="fas fa-th"></i>@column</li>
                                        }
                                    </ul>
                                </div>
                            }

                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-6 mt-4">
        <div class="screen-two">
            <h3>Schema</h3>
            <iframe src="/Screen2" width="100%" height="400px"></iframe>

        </div>
    </div>
</div>


 

